{% extends 'base.html.twig' %}

{% block title %} My Contacts {% endblock %}

{% block body %}
<style>

</style>

{% if user %}
  <div class="row text-center mt-5 mb-3">
    <div class="col-12">
      <h1>Welcome {{ user.FirstName|capitalize }}</h1>
    </div>
    <div class="col-12 mb-5">
      <div class="btn-group" role="group" aria-label="User Actions">  
        <a href="/user/edit" class="btn btn-warning">Edit infos</a>
        <a href="/user/disconnect" class="btn btn-danger">Disconnect</a>
      </div>
    </div>
    <div class="col-12">
      <a href="/contact/create" class="btn btn-success">Add contact</a>
    </div>
  </div>

  {% if user.contacts %}
    <div class="row">
      <h2>Contact List</h2>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Adress</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
          </tr>
          </thead>
          <tbody>
            {% for c in user.contacts %}
              <tr>
                <td>{{ c.FirstName }}</td>
                <td>{{ c.LastName }}</td>
                <td>{{ c.Adress }}</td>
                <td>{{ c.Phone }}</td>
                <td>{{ c.Email }}</td>
                <td>
                  <a href="/contact/{{c.Id}}" class="btn btn-primary btn-sm"><i class="far fa-eye"></i></a>
                  <a href="/contact/delete/{{c.Id}}" class="btn btn-danger btn-sm"><i class="fas fa-times"></i></a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
      </table>
    </div>
  {% endif %}  

{% endif %}

{% endblock %}
